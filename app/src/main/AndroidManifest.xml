<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="biz.zacneubert.raspbert.lineracers" >
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/tricycle"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="biz.zacneubert.raspbert.lineracers.LineRacersApplication">

        <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Settings.Settings_List_Activity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.settings" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CourseSelectionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.courseSelection" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".VehicleSelectionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.vehicleSelection" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GameLobbyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.gameLobby" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PostGameActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.postGame" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LeaderboardActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.leaderboard" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HelpActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.leaderboard" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".GameplayActivity"/>

    </application>
</manifest>
